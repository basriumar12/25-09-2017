<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    tools:context="com.blogbasbas.haripertama.Main2Activity">
    <ImageView
        android:scaleType="fitXY"
        android:src="@drawable/desert"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        />

    <TextView
        android:textColor="@color/colorPrimary"
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:text="@string/isitext" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Button
        android:layout_margin="10dp"
        android:background="@drawable/backgroundbtn"
        android:drawableLeft="@drawable/ic_create"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:drawableRight="@drawable/ic_delete_black_24dp"
        android:background="@color/orange"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>
